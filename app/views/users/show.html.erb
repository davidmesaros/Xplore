<div class="container">

        <div class="row">
            <div class="box">
               <div class="col-lg-12 text-center">
                  <div class="img-responsive img-border img-full">
                    
                      <% @user.photos.each do |photo| %>
                      <% if @user.photos.empty? %>
                          <h2> No PHoto, Add a new Photo of the venue you attended </h2>
                      <% else %>

                       <p><%= link_to(image_tag(photo.image_url, :class => 'xthumb'), photo) %>
                       </p>
                       <% end %>

                       <hr>

                  
                   <% end %>

                   <h2> No PHoto, Add a new Photo of the venue you attended </h2>
                </div>
             </div>
          </div>
      </div>




   <footer>
   <div class ="navbar navbar-fixed-bottom">
    <div class ="navbar-inner">
      <div class ="container">
        <div class = "nav">
         <%= link_to "Xplore feed | ", photos_path %>
           
           <% if @current_user == @user %>
              <%= link_to'Delete Profile |', @user, :data => {:method => :delete, :confirm => 'Really delete the Whole Profile?' } %>
