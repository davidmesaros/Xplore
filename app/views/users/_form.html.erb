
      
<div class="container">

        <div class="row">
            <div class="box">
               <div class="col-lg-12 text-center">
                  <div class="img-responsive img-border img-full">


        <div class="row">
            <div class="box">
               

              <%= form_for @user do |f| %>
                  <p class="nav nav-pills ">
                  <%= f.label :username %>
                  <%= f.text_field :username, :autofocus => true, :class => "form-control" %>
                  </p>
                  <p>
                  <%= f.label :avatar %>
                  <%= f.file_field :avatar , :class => 'btn btn-primary'%>
                  <%= f.hidden_field :avatar_cache, :class => "css_avatar" %>
                  </p>

                  <p class="nav nav-pills">
                  <%= f.label :password %>
                  <%= f.password_field :password, :class => "form-control" %>
                  </p>
                  <br>
                  <p class="nav nav-pills nav-stacked">
                  <%= f.label :password_confirmation %>
                  <%= f.password_field :password_confirmation, :class => "form-control" %>
                  </p>
                  <br>

                  <%= f.button 'Update!',:class =>"btn btn-primary" %>
                  <hr>
                <% end %>
              </div>
            </div>
          </div>

