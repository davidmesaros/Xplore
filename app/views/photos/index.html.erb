<div class="container">

        <div class="row">
            <div class="box">
               <div class="col-lg-12 text-center">
                  <div class="img-responsive img-border img-full">



            <% @photos.reverse.each do |photo| %>


  
              <div class='font2'
                  <% if photo.user.present? %>
                     <%= link_to(photo.user.username, photo_path(photo)) %> </li>

                  <% else %>
                    <%= photo.user %>
                <% end %>  
              </div> 
                  
              <div class='thumb2'>
                  <p><%= image_tag(photo.user.avatar_url, :class => 'thumb') if photo.user %>
                  </p>
              </div>
                  <br>
                  <p><%= image_tag(photo.image_url, :class => 'xthumb') if photo.user   %></p>
                       
    
                <% if photo.user == @current_user %>
                  <%= link_to'Delete', photo , :data => {:method => :delete, :confirm => 'Really delete the Whole Post?' } %>
                  

