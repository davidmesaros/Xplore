 <div class="container">

        <div class="row">
            <div class="box">
               <div class="col-lg-12 text-center">
                  <div class="img-responsive img-border img-full">


        <div class="row">
            <div class="box">


                   <%= form_for @photo do |f| %>
                      <p class="nav nav-pills ">Xplore Name: <%= @current_user.username  %> </p>
                      <br>
                      <p >
                      <%= f.label :UploadPhoto %>
                      <%= f.file_field :image, :class => 'btn btn-primary' %>
                      <%= f.hidden_field :image_cache, :class => 'thumb' %>
                      </p>
                      <br>

                      <%= f.submit :class =>"btn btn-primary" %>

                      <hr>
                <% end %>
              </div>
            </div>
          </div>

                    
                      	
                      	