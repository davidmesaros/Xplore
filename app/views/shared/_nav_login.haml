- if @current_user 
	%h4= Hi @current_user.username.upcase
	%p= link_to 'View Profile', user_path(@current_user)
	%p= link_to 'Log Out', login_path, login_path, :data => {:method => :delete, :confirm => 'Really logout?' }
- else
	%h4 LOG IN
	= form_tag '/login' do
		%p
		= label_tag 'username'
		= text_field_tag 'username', nil ,:autofucus =>true
		%p
		= label_tag 'password'
		= password_field_tag 'password'
		%p
		= submit_tag 'Login', :id => 'login_form_button'
		= link_to 'Sign Up', new_user_path

